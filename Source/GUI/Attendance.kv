Manager:
    Login:
    Course:
    Recognition

<Login>:
    name:"Login"
    MDBoxLayout:
        orientation: "vertical"
        md_bg_color: app.theme_cls.bg_normal
        MDBoxLayout:
            orientation: "vertical"
            Image:
                id: Logo
                source:'../../logo.png'
                allow_stretch: True
                keep_ratio: True
                size_hint: .2, 0.2
                pos_hint: {"center_x":0.5,"center_y":0.1}
        MDBoxLayout:
            orientation: "vertical"
            spacing: 20
            MDTextFieldRound:
                id: studentId
                hint_text: "Student Id"
                icon_right: "account"
                size_hint_x:  None
                font_size: 18
                height: "30dp"
                width : 200
                pos_hint: {"center_x": 0.5 }
                password : False
                elevation: 10
            MDTextFieldRound:
                id: password
                hint_text: "password"
                icon_right: "eye-off"
                size_hint_x:  None
                font_size: 18
                height: "30dp"
                width : 200
                pos_hint: {"center_x": 0.5 }
                password : True
                elevation: 10
            MDFillRoundFlatButton:
                text: "Login"
                font_size: 12
                pos_hint: {"center_x":0.5}
                elevation: 20
                on_release: app.logger()
        MDBoxLayout:
            orientation: 'vertical'

<Course>:
    name:"Course"
    MDBoxLayout:
        orientation: "vertical"
        md_bg_color: app.theme_cls.bg_normal
        MDBoxLayout:
            orientation: "vertical"
        MDBoxLayout:
            orientation: "vertical"
            spacing: 20
            MDTextFieldRound:
                id: course_code
                hint_text: "Course Code"
                icon_right: "account"
                size_hint_x:  None
                font_size: 18
                height: "30dp"
                width : 200
                pos_hint: {"center_x": 0.5 }
                password : False
                elevation: 10
            MDFillRoundFlatButton:
                text: "Continue"
                font_size: 12
                pos_hint: {"center_x":0.5}
                elevation: 20
                on_release:
                    app.root.current = "Recognition"
        MDBoxLayout:
            orientation: 'vertical'

<Recognition>:
    name : "Recognition"
    MDBoxLayout:
        orientation: 'vertical'
        KivyCamera:
            id: camera
            resolution: (640, 480)
            detect: True