Manager:
    Login:
    Course:
    Recognition:

<Login>:
    name : 'main'
    md_bg_color: app.theme_cls.bg_normal
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source:'../../background.jpg'

    MDBoxLayout:
        orientation: "vertical"
        md_bg_color: app.theme_cls.bg_normal
        MDBoxLayout:
            orientation: "vertical"
            Image:
                id: Logo
                source:'../../logo.png'
                allow_stretch: True
                keep_ratio: True

                pos_hint: {"center_x":0.5,"center_y":0.5}
        MDBoxLayout:
            orientation: "vertical"
            spacing: 20
            MDTextFieldRound:
                id: studentId
                hint_text: "Student Id"
                icon_left: "account"
                size_hint_x:  None
                font_size: 18
                height: "30dp"
                width : 200
                pos_hint: {"center_x": 0.5 }
                password : False
                elevation: 10
            MDTextFieldRound:
                id: password
                hint_text: "password"
                icon_left: "eye-off"
                size_hint_x:  None
                font_size: 18
                height: "30dp"
                width : 200
                pos_hint: {"center_x": 0.5 }
                password : True
                elevation: 10
            MDFillRoundFlatButton:
                text: "Login"
                font_size: 12
                pos_hint: {"center_x":0.5}
                elevation: 20
                on_release: root.manager.current = 'course'
        MDBoxLayout:
            orientation: 'vertical'


<Course>:
    name : "Course"

<Recognition>:
    name : "Recognition"
    MDBoxLayout:
        orientation: 'vertical'
        KivyCamera:
            id: camera
            resolution: (640, 480)
            detect: True

<P>:
    Label:
        orientation: 'vertical'
        md_bg_color: app.theme_cls.bg_normal
        size_hint : 0.2, 0.1
        pos_hint : {"x" : 0.3, "top" : 0.8}