WindowManager:
    Login:
    Course:
    VideoScreen:
<Login>:
    name : 'Login'
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source:'Bg.jpg'
    FloatLayout:
        size:(320,600)
        MDTextField:
            mode: "rectangle"
            icon_right :"account"
            current_hint_text_color: 0.2,0.2,0.3,1
            id: studentId
            hint_text: "Student Id"
            line_color_focus: 0, 0, .6, 1
            hint_text_color: 1,0,0,1
            input_filter: 'int'
            required: True
            helper_text_mode: "on_focus"
            helper_text: "Enter 7-long ID"
            max_text_length: 7
            size_hint: .8, .08
            pos: dp(30),dp(250)
            font_size: dp(16)
            password : False
            elevation: 10
        MDTextField:
            mode: "rectangle"
            id: password
            icon_right :"lock"
            current_hint_text_color: 0.2,0.2,0.3,1
            hint_text: "password"
            font_size: dp(16)
            size_hint: .8, .08
            pos: dp(30),dp(200)
            password : True
        MDRaisedButton:
            text: "Login"
            size_hint: .4, .05
            pos: dp(20),dp(130)
            font_size: dp(12)
            md_bg_color: .6, 0, .15, 1
            on_press: root.logger()
        MDRaisedButton:
            text: "Exit"
            size_hint: .4, .05
            pos: dp(160),dp(130)
            font_size: dp(12)
            md_bg_color: .6, 0, .15, 1
            on_press: root.exiter()
        Image:
            id: Logo
            source:'logoRT.png'
            allow_stretch: False
            keep_ratio: True
            pos_hint: {"center_x":0.5,"center_y":0.73}


<Course>:
    name: 'Course'
    on_enter: root.dropDownMenu()
    on_leave: root.removeWid()
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source:'Bg.jpg'
    MDBoxLayout:
        adaptive_height: True
        orientation: "vertical"
        spacing: 10
        pos_hint: {'left': 1}
        MDRaisedButton:
            text: "Back"
            font_size: dp(12)
            md_bg_color : 0, .35, .35, 1
            pos_hint: {'right': 1}
            elevation: 10
            on_release: root.returntoLogin()
        MDRaisedButton:
            text: "Refresh"
            font_size: dp(12)
            md_bg_color : 0, .35, .35, 1
            pos_hint: {'right': 1}
            elevation: 10
            on_release: root.refresh()


<VideoScreen>:
    name: 'VideoScreen'
    orientation: 'vertical'
    on_enter: root.cameraMethod()
    on_leave: root.removeCamera()
    MDBoxLayout:
        orientation: 'vertical'
        Button:
            font_size: dp(12)
            text: 'Back'
            on_press: app.root.current = 'Course'
            size_hint_y: None
            height: '48dp'