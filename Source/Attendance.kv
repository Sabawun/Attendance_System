Manager:
    Login:
    Home:
    Course:
    Recognition

<Login>:
    name:"Login"
    MDCard:
        size_hint: None, None
        size: 360, 600
        pos_hint: {"center_x":0.5,"center_y":0.5}
        elevation: 10
        padding: 25
        id:Login
        orientation: 'vertical'
        spacing: 25
        canvas.before:
            Rectangle:
                source: '/Users/sabawunafzalkhattak/Desktop/Attendance_System/background.jpeg'
                size: 360 ,580
                pos: self.pos
        Image:
            id: Logo
            source:'/Users/sabawunafzalkhattak/Desktop/Attendance_System/logo.png'
            allow_stretch: True
            keep_ratio: True
            size_hint: .2, 0.2
            pos_hint: {"center_x":0.5,"center_y":0.1}
        Widget:
            size_hint_y: None
            height: 5
        MDTextFieldRound:
            id: student_id
            hint_text: "Student Id"
            icon_right: "account"
            size_hint_x:  None
            font_size: 16
            width : 200
            height: "30dp"
            pos_hint: {"center_x": 0.5 }
            color_mode: 'custom'
            line_color_focus: 1, 1, 1, 1
        MDTextFieldRound:
            id: password
            hint_text: "password"
            icon_right: "eye-off"
            size_hint_x:  None
            font_size: 18
            height: "30dp"
            width : 200
            pos_hint: {"center_x": 0.5 }
            password : True
        Widget:
            size_hint_y: None
            height: 10
        MDFillRoundFlatButton:
            text: "Login"
            font_size: 12
            pos_hint: {"center_x":0.5}
            on_release:
                app.root.current = "Home"
                root.manager.transition.direction = "up"
        Widget:
            size_hint_y: None
            height: 15


<Home>:
    name:"Home"
    MDCard:
        size_hint: None, None
        size: 360, 600
        pos_hint: {"center_x":0.5,"center_y":0.5}
        elevation: 10
        id:Login
        orientation: 'vertical'
        MDBoxLayout:
            orientation: 'vertical'
            MDBoxLayout:
                orientation: 'vertical'
                MDLabel:
                    padding: '50'
                    canvas.before:
                        Color:
                            rgba: (1,0,0,1)
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    text: ' Attendance Portal '
                    font_size: 34
                    color : 'white'
                    width : 220
                    height: "40dp"
                    pos_hint: {"center_x": 0.5 }
            MDBoxLayout:
                orientation: 'horizontal'
                MDLabel:
                    text: ' Name: '
                    font_size: 16
                    width : 200
                    height: "30dp"
                    pos_hint: {"center_x": 0.5 }
                MDLabel:
                    text: 'Student Id: '
                    font_size: 16
                    width : 200
                    height: "30dp"
                    pos_hint: {"center_x": 0.5 }
            MDBoxLayout:
                orientation: 'horizontal'
                Widget:
                    size_hint_y: None
            MDBoxLayout:
                orientation: 'horizontal'
                Widget:
                    size_hint_y: None
            MDBoxLayout:
                orientation: 'horizontal'
                Widget:
                    size_hint_y: None
            MDBoxLayout:
                orientation: 'horizontal'
                MDBoxLayout:
                    orientation: 'vertical'
                    Widget:
                        size_hint_y: None
                MDBoxLayout:
                    orientation: 'vertical'
                    MDFillRoundFlatButton:
                        text: "Take Attendance"
                        font_size: 20
                        pos_hint: {"center_x":0.5}
                        on_release:
                            app.root.current = "Course"
                            root.manager.transition.direction = "up"
                MDBoxLayout:
                    orientation: 'vertical'
                    Widget:
                        size_hint_y: None
                        height: 5
            MDBoxLayout:
                orientation: 'horizontal'
                Widget:
                    size_hint_y: None
                    height: 5
            MDBoxLayout:
                orientation: 'horizontal'
                Widget:
                    size_hint_y: None
            MDBoxLayout:
                orientation: 'horizontal'
                MDBoxLayout:
                    orientation: 'vertical'
                    Widget:
                        size_hint_y: None
                        height: 5
                    Widget:
                        size_hint_y: None
                        height: 5
                MDBoxLayout:
                    orientation: 'vertical'
                    MDFillRoundFlatButton:
                        text: "View Attendance"
                        font_size: 20
                        pos_hint: {"center_x":0.5}
                        on_release:
                            app.root.current = "Home"
                            root.manager.transition.direction = "left"
                MDBoxLayout:
                    orientation: 'vertical'
                    Widget:
                        size_hint_y: None
                        height: 5
                    Widget:
                        size_hint_y: None
                        height: 5
            MDBoxLayout:
                orientation: 'horizontal'
                Widget:
                    size_hint_y: None
                    height: 5
                Widget:
                    size_hint_y: None
                    height: 5
        MDBoxLayout:
            orientation:'vertical'
            Widget:
                size_hint_y: None
                height: 5
            MDFillRoundFlatButton:
                text: "Exit"
                font_size: 12
                halign: 'center'
                pos_hint: {"center_x":0.8}
                on_release:
                    app.root.current = "Login"
                    root.manager.transition.direction = "right"
            Widget:
                size_hint_y: None
                height: 20


<Course>:
    name: "Course"
    MDCard:
        size_hint: None, None
        size: 360, 600
        pos_hint: {"center_x":0.5,"center_y":0.5}
        elevation: 10
        padding: 25
        id:Login
        orientation: 'vertical'
        spacing: 25
        canvas.before:
            Rectangle:
                source: '/Users/sabawunafzalkhattak/Desktop/Attendance_System/image.jpeg'
