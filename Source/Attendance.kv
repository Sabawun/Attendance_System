        MDTextFieldRound:
            id: section
            hint_text: "Section"
            size_hint_x:  None
            font_size: 18
            height: "30dp"
            width : 200
            pos_hint: {"center_x": 0.5 }
        Widget:
            size_hint_y: None
            height: 10
        MDFillRoundFlatButton:
            text: "Continue"
            font_size: 12
            pos_hint: {"center_x":0.5}
            on_release:
                app.root.current = "Recognition"
                root.manager.transition.direction = "up"
        Widget:
            size_hint_y: None
            height: 15

<Recognition>:
    name : "Recognition"
    MDCard:
        size_hint: None, None
        size: 360, 600
        pos_hint: {"center_x":0.5,"center_y":0.5}
        elevation: 10
        padding: 25
        id:Login
        orientation: 'vertical'
        spacing: 25
        Camera:
            id: camera
            resolution: (640,480)
            play: True
        Button:
            text: 'Capture'
            size_hint_y: None
            height: '48dp'
            on_press: root.capture()