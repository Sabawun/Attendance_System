        padding: 25
        spacing: 25
        orientation: 'vertical'
        Image:
            id: imageView
            source: "/Users/sabawunafzalkhattak/Desktop/Attendance_System/logo.jpg"
            allow_stretch: True
        MDLabel:
            id: Home_Label
            text: "Home"
            font_size: 16
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y:15
        Widget:
            size_hint_y: None
            height:5
        MDTextFieldRound:
            id: user
            hint_text: "Username"
            icon_right: "account"
            size_hint_x: None
            width: 200
            font_size: 14
            pos_hint: {"center_x": 0.5}
        MDTextFieldRound:
            id: password
