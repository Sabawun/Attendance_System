<Attendance>:
    name:"Attendance"
    MDCard:
        size_hint: None, None
        size: 300, 500
        pos_hint : {"center_x":0.5,"center_y":0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'
        MDLabel:
            id: Attendance_Label
            text: "Attendance"
            font_size: 16
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y:15
        Widget:
            size_hint_y: None
            height:5
        MDRoundFlatButton:
            text: "Take Attendance"
            font_size: 12
            pos_hint: {"center_x":0.5}
            on_press:
                app.take_attendance()
                app.root.current = "Home"
        MDRoundFlatButton:
            text: "Back"
            font_size: 12
            pos_hint: {"center_x":0.5}
            on_press: app.root.current = "Home"
        Widget:
            size_hint_y: None
            height:20